<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_height"
    android:layout_margin="@dimen/margin_all"
    android:orientation="horizontal"
    app:cardCornerRadius="@dimen/margin_all"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/note_list_bgview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/note_color5"
        >
        <TextView
            android:id="@+id/note_title"
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/margin_all"
            android:layout_height="@dimen/card_title_height"
            android:gravity="center_vertical"
            android:textSize="@dimen/title_size"
            android:background="#66FFFFFF"
            android:text="TextView" />
        <TextView
            android:id="@+id/note_content"
            android:padding="@dimen/margin_all"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="@dimen/title_size"
            android:background="#99FFFFFF"
            android:maxEms="15"
            android:maxLines="4"
            android:ellipsize="end"
            android:text="TextView" />

    </LinearLayout>


</android.support.v7.widget.CardView>