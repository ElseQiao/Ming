<?xml version="1.0" encoding="utf-8"?>
<com.example.myapplication.custom.SoftInputRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/edit_SoftInputRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/note_color3"
    android:fitsSystemWindows="true"
    >


    <android.support.design.widget.AppBarLayout
        android:id="@+id/note_appBarLayout"
        android:layout_width="match_parent"
        android:background="#00000000"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/note_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/toolbar8"
            app:layout_scrollFlags="enterAlwaysCollapsed"
           >
            <EditText
                android:id="@+id/title_et"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:background="@null"
                android:hint="@string/dirdialog_hintTitle"
                android:maxLength="10"
                android:padding="4dp"
                android:textColor="@color/color_bg"
                android:textColorHint="@color/color_bg"
                android:typeface="serif" />


        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/bottom_bt"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:foregroundGravity="center"
        android:clickable="true"
        android:src="@mipmap/bottom"
        app:backgroundTint="@color/colorPrimary66" />

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/note_show_nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_below="@+id/note_appBarLayout"
      >
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            app:cardBackgroundColor="#33ffffff"
            app:cardElevation="4dp"
            app:contentPadding="8dp">
    <com.example.myapplication.custom.LineEditText
        android:id="@+id/content_et"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="240dp"
        android:gravity="start"
        android:lineSpacingExtra="4dp"
        android:scrollbars="vertical"
        android:text="gjlguolyyyhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhh"
        android:textSize="@dimen/note_text_size"
        android:typeface="serif" />

        </android.support.v7.widget.CardView>
    </android.support.v4.widget.NestedScrollView>

</com.example.myapplication.custom.SoftInputRelativeLayout>


