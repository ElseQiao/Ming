<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/a123"
    android:fitsSystemWindows="true">


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/note_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_collapseMode="pin">

            <EditText
                android:id="@+id/title_et"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/normal_height"
                android:layout_gravity="center"
                android:background="@null"
                android:hint="@string/dirdialog_hintTitle"
                android:maxLength="10"
                android:padding="4dp"
                android:textColor="@color/color_bg"
                android:textColorHint="@color/color_bg"
                android:typeface="serif" />

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>


    <com.example.myapplication.custom.LineEditText
        android:id="@+id/content_et"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:gravity="start"
        android:padding="@dimen/margin_all"
        android:lineSpacingExtra="4dp"
        android:scrollbars="vertical"
        android:background="@null"
        android:text="阿道夫噶是短发"
        android:typeface="serif" />


</android.support.design.widget.CoordinatorLayout>


