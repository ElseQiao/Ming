<?xml version="1.0" encoding="utf-8"?>
<com.example.myapplication.custom.SoftInputRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color5"
    android:fitsSystemWindows="true"
    >


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:background="#00000000"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/note_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/toolbar8"
            app:layout_scrollFlags="enterAlwaysCollapsed"
           >
            <EditText
                android:id="@+id/title_et"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:background="@null"
                android:hint="@string/dirdialog_hintTitle"
                android:maxLength="10"
                android:padding="4dp"
                android:textColor="@color/color_bg"
                android:textColorHint="@color/color_bg"
                android:typeface="serif" />


        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/note_nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <com.example.myapplication.custom.LineEditText
        android:id="@+id/content_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#33ffffff"
        android:gravity="start"
        android:lineSpacingExtra="4dp"
        android:padding="@dimen/margin_all"
        android:scrollbars="vertical"
        android:text="阿道夫噶是短发"
        android:textSize="16sp"
        android:typeface="serif" />
    </android.support.v4.widget.NestedScrollView>

</com.example.myapplication.custom.SoftInputRelativeLayout>


